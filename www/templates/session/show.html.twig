{% extends 'base.html.twig' %}

{% block title %}Réservation!{% endblock %}

{% block body %}
    <div class="col-xs-12 col-md-4">
        <img class="card-img-top img-responsive"
             src="{{ session.film.poster }}" alt="Deer in nature">
        <div class="card-block">
            <h4 class="card-title">{{ session.film.name }}</h4>
            <h6 class="text-muted">Sortie: {{ session.film.releaseDate.date | date("d/m/Y") }} |
                Durée: {{ session.film.duration }}
                min</h6>
            <p class="text-muted">Prix: {{ session.film.price }}€</p>
            <p class="card-text">{{ session.film.description }}</p>
        </div>
    </div>
    <div class="col-xs-12 col-md-8">
        <h1>{{ session.film }}</h1>
        <p>Numéro de la salle : {{ session.room}}</p>
        <h3>Nombre de place restante : {{ session.capacity }}</h3>
        <form action="{{ path('booking_summary', {idSession: session.id, idFilm: session.film.id}) }}" method="POST">
            <label for="example-number-input" class="col-form-label">Nombre de place à réserver :
                <input class="form-control mb-3 mt-3" type="number" value="1" name="nb_place_reserved">
                <input type="submit" value="Réserver" class="btn btn-outline-dark">
            </label>
        </form>
    </div>
{% endblock %}


