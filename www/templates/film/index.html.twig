{% extends 'base.html.twig' %}

{% block title %}Cinéma Gaumont{% endblock %}

{% block body %}
            {% for film in films %}
                <div class="col-xs-12 col-md-4">
                    <img class="card-img-top img-responsive"
                         src="{{ film.poster }}" alt="Deer in nature">
                    <div class="card-block">
                        <h4 class="card-title">{{ film.name }}</h4>
                        <h6 class="text-muted">Sortie: {{ film.releaseDate.date | date("d/m/Y") }} |
                            Durée: {{ film.duration }} min</h6>
                        <p class="card-text">{{ film.description }}</p>
                        <p class="text-center">
                            <a href="{{ path('film_show', {'id': film.id}) }}" class="btn btn-primary">
                                Réserver une séance
                            </a>
                        </p>
                    </div>
                </div>
            {% endfor %}
{% endblock %}